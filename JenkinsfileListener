pipeline {
    agent any

    environment {
        COMPOSE_FILE_PATH = './' // Path to your docker-compose.yml file, if not in the root directory
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Checkout the Git repository
                dir(COMPOSE_FILE_PATH) {
                    sh 'echo Trigger' // Specify the branch to checkout
                }
            }
        }
    }
}